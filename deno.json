{
  "name": "@dajiaji/crystals-kyber-js",
  "version": "1.1.2",
  "exports": "./mod.ts",
  "imports": {
    "@noble/hashes": "npm:@noble/hashes@^1.5.0"
  },
  "fmt": {
    "include": [
      "README.md",
      "deno.json",
      "dnt.ts",
      "mod.ts",
      "src/",
      "test/",
      "bench/"
    ],
    "exclude": [
      "**/*/node_modules"
    ]
  },
  "lint": {
    "include": ["mod.ts", "src/", "test/", "bench/"],
    "exclude": [
      "**/*/node_modules"
    ]
  },
  "tasks": {
    "test": "deno fmt && deno lint && deno test --import-map=./import_map.json test -A --fail-fast --doc --coverage=coverage --parallel --allow-read",
    "test:cloudflare": "cd test/runtimes/cloudflare && npm install && npm link crystals-kyber-js && npm run test",
    "cov": "deno coverage ./coverage --lcov --exclude='test'",
    "npm": "deno task dnt && deno task npm-link && deno task npm-pack",
    "dnt": "deno run --import-map=./import_map.json -A dnt.ts",
    "npm-link": "cd npm && npm link",
    "npm-pack": "cd npm && npm pack --dry-run",
    "minify": "esbuild npm/esm/mod.js --bundle --format=esm --minify"
  }
}
